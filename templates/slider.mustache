{{#slidergeneralsettings.show}}
  <div id="slider">
    <div class="carousel {{slidergeneralsettings.animation}}" data-interval="{{slidergeneralsettings.interval}}">


    {{#slidergeneralsettings.showindicatornav}}
    <ol class="carousel-indicators">
       <!--add loop with id (data slide to)-->
      <li class="indicator-list" data-target="#carouselExampleIndicators" data-slide-to="0"></li>
    </ol>
    {{/slidergeneralsettings.showindicatornav}}

      <div class="carousel-inner">
      
        {{#slidecontent}}
          <div class="carousel-item">
          
            <a href="{{link}}" title="{{linktitle}}">
              {{#image}}<img class="d-block w-100" src="{{image}}" alt="{{imagetitle}}">{{/image}}
            </a>

            <div class="carousel-caption d-none d-md-block">
              {{#slidergeneralsettings.showcaption}}<h5>{{caption}}</h5>{{/slidergeneralsettings.showcaption}}
              {{#slidergeneralsettings.showcontent}}<p>{{content}}</p>{{/slidergeneralsettings.showcontent}}
            </div>
          </div>
        {{/slidecontent}}
        
      </div>
      {{#slidergeneralsettings.showarrownav}}
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">prev</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">next</span>
      </a>
      {{/slidergeneralsettings.showarrownav}}
      
    </div>

    
  </div> 
{{/slidergeneralsettings.show}}


{{#js}}
require(['jquery', 'theme_boost/bootstrap/carousel'], function($) {

  let slider = $('#slider');
  let carouselitems = document.getElementById("slider").getElementsByClassName('carousel-item');
  if (carouselitems && carouselitems[0]){
    carouselitems[0].className += ' active';
  }
